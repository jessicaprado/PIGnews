<div class = "container">

	<div >
		<ul>
		 	<div class="news col-md-10">
		  		{{#each Articles}}
		    		<li class="list">
		    			<div class="image_div">
		    				<img src="{{image}}">
		    			</div>

		    			<div class="titleLinkDiv">
		    				<h5>{{title}}</h5>
		    				<a class="link">{{link}}</a>
		    			</div>
		    		</li> 
		  		{{/each}}
		 	</div> 
		</ul>
		
	</div>

	<div class='moreNews col-md-12'>
		<form action='/scrape' method='GET'>
			<button class='pigButton'>More PIG News!</button>
		</form>
	</div>
</div>